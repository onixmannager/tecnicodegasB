    <script>
        // Inicializar MathJax
        MathJax = {
            tex: {
                inlineMath: [['$', '$'], ['\\(', '\\)']],
                displayMath: [['$$', '$$'], ['\\[', '\\]']]
            },
            svg: {
                fontCache: 'global'
            }
        };
        
        // Mobile menu
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const sidebar = document.getElementById('sidebar');
        
        mobileMenuBtn.addEventListener('click', () => {
            sidebar.classList.toggle('active');
        });
        
        // Cerrar men√∫ al hacer clic en enlace (mobile)
        document.querySelectorAll('.nav-links a').forEach(link => {
            link.addEventListener('click', () => {
                if (window.innerWidth <= 1200) {
                    sidebar.classList.remove('active');
                }
            });
        });
        
        // Sistema de tabs
        const tabs = document.querySelectorAll('.tab');
        const tabContents = document.querySelectorAll('.tab-content');
        
        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                const targetId = tab.getAttribute('data-tab');
                
                // Remover activo de todos
                tabs.forEach(t => t.classList.remove('active'));
                tabContents.forEach(tc => tc.classList.remove('active'));
                
                // Activar actual
                tab.classList.add('active');
                document.getElementById(targetId).classList.add('active');
            });
        });
        
        // Sistema de acorde√≥n
        const accordionHeaders = document.querySelectorAll('.accordion-header');
        
        accordionHeaders.forEach(header => {
            header.addEventListener('click', () => {
                const content = header.nextElementSibling;
                const icon = header.querySelector('i');
                
                // Cerrar otros
                accordionHeaders.forEach(otherHeader => {
                    if (otherHeader !== header) {
                        otherHeader.classList.remove('active');
                        otherHeader.nextElementSibling.classList.remove('active');
                        otherHeader.querySelector('i').classList.remove('fa-chevron-up');
                        otherHeader.querySelector('i').classList.add('fa-chevron-down');
                    }
                });
                
                // Alternar actual
                header.classList.toggle('active');
                content.classList.toggle('active');
                
                // Cambiar icono
                if (header.classList.contains('active')) {
                    icon.classList.remove('fa-chevron-down');
                    icon.classList.add('fa-chevron-up');
                } else {
                    icon.classList.remove('fa-chevron-up');
                    icon.classList.add('fa-chevron-down');
                }
            });
        });
        
        // Navegaci√≥n suave
        document.querySelectorAll('.nav-links a').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                const targetSection = document.querySelector(targetId);
                
                if (targetSection) {
                    // Actualizar activo en nav
                    document.querySelectorAll('.nav-links a').forEach(a => a.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Scroll suave
                    window.scrollTo({
                        top: targetSection.offsetTop - 30,
                        behavior: 'smooth'
                    });
                }
            });
        });
        
        // Sistema de b√∫squeda simple
        const searchBox = document.getElementById('searchBox');
        if (searchBox) {
            searchBox.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                const sections = document.querySelectorAll('.section');
                
                sections.forEach(section => {
                    const text = section.textContent.toLowerCase();
                    if (text.includes(searchTerm)) {
                        section.style.display = 'block';
                    } else {
                        section.style.display = 'none';
                    }
                });
            });
        }
        
        // Bot√≥n imprimir
        document.getElementById('printBtn')?.addEventListener('click', (e) => {
            e.preventDefault();
            window.print();
        });
        
        // Bot√≥n modo oscuro
        const darkModeBtn = document.getElementById('darkModeBtn');
        if (darkModeBtn) {
            darkModeBtn.addEventListener('click', (e) => {
                e.preventDefault();
                document.body.classList.toggle('dark-mode');
                
                // Guardar preferencia
                if (document.body.classList.contains('dark-mode')) {
                    localStorage.setItem('darkMode', 'enabled');
                    darkModeBtn.innerHTML = '<i class="fas fa-sun"></i> Modo Claro';
                } else {
                    localStorage.setItem('darkMode', 'disabled');
                    darkModeBtn.innerHTML = '<i class="fas fa-moon"></i> Modo Oscuro';
                }
            });
            
            // Cargar preferencia guardada
            if (localStorage.getItem('darkMode') === 'enabled') {
                document.body.classList.add('dark-mode');
                darkModeBtn.innerHTML = '<i class="fas fa-sun"></i> Modo Claro';
            }
        }
        
        // Bot√≥n scroll to top
        document.getElementById('scrollToTop')?.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
        
        // Actualizar MathJax despu√©s de cargar contenido din√°mico
        function updateMathJax() {
            if (typeof MathJax !== 'undefined') {
                MathJax.typesetPromise();
            }
        }
        
        // Ejecutar MathJax despu√©s de cargar
        window.addEventListener('load', () => {
            updateMathJax();
        });
        
        // Actualizar MathJax cuando se muestren acordeones o tabs
        accordionHeaders.forEach(header => {
            header.addEventListener('click', () => {
                setTimeout(updateMathJax, 300);
            });
        });
        
        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                setTimeout(updateMathJax, 300);
            });
        });
        
        // Simulador de examen simple
        const examQuestions = [
            {
                question: "¬øCu√°l es la distancia m√≠nima horizontal entre una tuber√≠a de gas y un hueco (ventana)?",
                options: ["15 cm", "25 cm", "50 cm", "100 cm"],
                correct: 2,
                explanation: "Seg√∫n RD 919/2006 Art. 14, la distancia m√≠nima horizontal es 50 cm."
            },
            {
                question: "¬øCu√°l es el PCS del gas natural?",
                options: ["9.5 kWh/m¬≥", "11.0 kWh/m¬≥", "25.8 kWh/m¬≥", "31.2 kWh/m¬≥"],
                correct: 1,
                explanation: "El Poder Calor√≠fico Superior del gas natural es aproximadamente 11.0 kWh/m¬≥."
            },
            {
                question: "¬øCada cu√°ntos a√±os deben revisarse las instalaciones comunes de gas?",
                options: ["2 a√±os", "4 a√±os", "5 a√±os", "10 a√±os"],
                correct: 2,
                explanation: "Seg√∫n RD 919/2006, las instalaciones receptoras comunes deben revisarse cada 5 a√±os."
            }
        ];
        
        // Crear simulador si existe la secci√≥n
        const simuladorSection = document.getElementById('simulador');
        if (simuladorSection) {
            const examContainer = document.createElement('div');
            examContainer.innerHTML = `
                <h3>Simulador de Examen R√°pido</h3>
                <div id="examQuestions"></div>
                <button id="checkAnswers" class="btn">Comprobar Respuestas</button>
                <div id="examResults" style="margin-top: 20px;"></div>
            `;
            simuladorSection.appendChild(examContainer);
            
            // Implementar l√≥gica del simulador...
        }
    </script>
</body>
</html>
